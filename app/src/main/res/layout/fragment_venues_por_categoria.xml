<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.VenuesPorCategoriaFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tbvpcate"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/purple"/>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >

            <ImageView
                android:id="@+id/fotocateggneral"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:src="@drawable/etiquetas"
                android:layout_gravity="center"
                android:background="#981309"/>

            <TextView
                android:id="@+id/eticategoriagneral"
                android:layout_width="256dp"
                android:layout_height="57dp"
                android:gravity="center"
                android:text="Nombre de Categoria General"
                android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvderivacateg"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:padding="12dp" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>